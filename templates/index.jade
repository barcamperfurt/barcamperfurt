extends layout

block content

  .grid.menu-subline
    .small-4.columns
      .icon.date
        | 24.-25.10.2015
    .small-4.columns
      .icon.time
        | 9:00-17:00
    .small-4.columns
      .icon.place
        | StudioPark KinderMedienZentrum
        br
        | Erich-Kästner-Strasse 1
        br
        | 99094 Erfur


  .grid
    .small-12.columns
      h1.intro-title
        | Konferenz "Jugend & Medien"

  .news
    .grid
      .small-12.medium-10.medium-centered.large-8.large-centered.columns
        h1 News
          a.icon-rss(href='/feed.xml') &nbsp;
    .grid
      - var articles = _.chain(contents.news._.directories).map(function(item) {
      -   return item.index;
      - }).compact().sortBy(function(item) {
      -   return -item.date;
      - }).filter(function(item, index) {
      -   return index < 2;
      - }).value();

      each article in articles
        article.news__article.small-12.medium-10.medium-centered.large-8.large-centered.columns
          h2.news__article__title
            small= moment(article.date).format('MMMM DD, YYYY')
            br
            a(href=article.url)= article.title
          section.news__article__content!= article.intro

    .grid
      .more-link.small-12.medium-10.medium-centered.large-8.large-centered.columns
        a(href='/news/', title='News') Alle News lesen »


  .location
    .grid
      .small-12.medium-10.medium-centered.large-8.large-centered.columns
