extends layout

block title
  title= page.title + ' – ' + locals.name
  meta(property='og:title', content= page.title + ' – ' + locals.name)

block content
  .grid.sponsoring
    .small-12.medium-10.medium-centered.large-8.large-centered.columns
      article
        header
          h1!= page.title

    .small-12.medium-10.medium-centered.large-8.large-centered.columns
      p Das BarCamp 'Kinder, Jugend, Medien' ist kostenlos für über 100 Teilnehmer. Alle Organisatoren arbeiten ehrenamtlich. Trotzdem entstehen jedes Jahr zirka 5000EUR Kosten für Miete, Catering, Versicherung etc. Das ist nur dank unserer großartigen Sponsoren möglich. Wenn du uns auch unterstützen willst (ob finanziell, materiell oder ideell) dann Dich an <a href="mailto:peter@barcamp-erfurt.de"> Peter. </a>

      .more-link.small-centered
        a(href='mailto:peter@barcamp-erfurt.de', title='Kontakt') Sponsor werden
        a(href='#footer', title='Spenden') Spender werden
        <br /><br />


    .small-12.medium-10.medium-centered.large-8.large-centered.columns
        h2 Wie kann man außerdem unterstützen?
        ul
          li <strong>Materiell</strong>
          | Vom Teebeutel bis zum Leih-Beamer gibt es viel, das wir gebrauchen können. Auch als Materialsponsor kannst Du uns unterstützen oder als Materialsponsor für deine Firma werben. Ob Obst, Snacks, Kaffee oder Haftnotizen - <a href="mailto:peter@barcamp-erfurt.de"> schreib uns!</a><br /><br />
          li <strong>Ideell</strong>
          | Hilf uns, unsere Konferenz noch bekannter zu machen. Du kennst mögliche Sponsoren? Du schreibst einen Blog oder Newsletter und willst uns erwähnen? <a href="https://twitter.com/BarCampErfurt">Retweete</a>, <a href="https://de-de.facebook.com/barcamperfurt">like</a> und verlinke uns!
          <br /><br /><br />

        h2(id='unternehmen') Die Sponsoring-Pakete für Unternehmen

    .small-12.medium-10.medium-centered.large-8.large-centered.columns.sponsoringoptions
      .grid.sponsoringheader
        .small-6.columns
          p
        .small-2.columns.packagebasicsmall
          p
            span Basis&shy;paket Klein
          div ab 300€
        .small-2.columns.packagebasicbig
          p
            span Basis&shy;paket Groß
          div ab 600€
        .small-2.columns.packagepremium
          p
            span Premium Paket
          div ab 1500€
      each feature in page.metadata.features
        .grid
          .small-6.columns
            p #{feature.title}
          p.small-2.columns
              if feature.small
                span ✓
          p.small-2.columns
            if feature.large
              span ✓
          p.small-2.columns
            if feature.premium
              span ✓

    .small-12.medium-10.medium-centered.large-8.large-centered.columns
      h2 Wie profitiere ich als Unternehmen vom Sponsoring?
      ul
        li Werbung für Ihr Unternehmen bei Innovatoren, Multiplikatoren und Experten
        li Präsentation Ihres Projektes bei einer meinungsbildenen Zielgruppe
        li starke Einbindung Ihrer Marke in unsere Öffentlichkeitsarbeit
        li für Premiumsponsoren: Ihr Logo auf über 100 T-Shirts für jeden Teilnehmer
        li Karma!
      |Sie sind in bester Gesellschaft. BarCamps werden u.a. gesponsert von Microsoft, Google, Otto, Burda Media oder der Telekom.

      .more-link.small-centered
        a(href='mailto:peter@barcamp-erfurt.de', title='Kontakt') Sponsor werden
        a(href='https://www.betterplace.org/de/projects/45050-5-barcamp-kinder-jugend-medien-fachkonferenz-05-06-11-2016', title='Spenden') Spender werden

    .small-12.medium-10.medium-centered.large-8.large-centered.columns
      br
      h1 Unsere Sponsoren


      - var sponsors = _.chain(contents.sponsoring._.directories).map(function(item) {
      -   return item.index;
      - }).compact().sortBy(function(item) {
      -   return item.name;
      - }).value();

      .grid

        - var goldSponsors = _.filter(sponsors, function(sponsor) {
        -   return sponsor.metadata.type === 'gold';
        - });

        each sponsor in goldSponsors
          .small-12.columns.sponsor
            .text-center
              a.sponsor__link(href=sponsor.metadata.link, title=sponsor.metadata.name, alt=sponsor.metadata.name)
                img.sponsor__logo(src= sponsor.url + sponsor.metadata.logo, alt=sponsor.metadata.name)
              p
                a(href='https://twitter.com/' + sponsor.metadata.twitter, target='_blank')= sponsor.metadata.twitter
                br
                a(href=sponsor.metadata.link, target='_blank')= sponsor.metadata.link
            p.sponsor__text!= sponsor.metadata.text

      .grid

        - var silverSponsors = _.filter(sponsors, function(sponsor) {
        -   return sponsor.metadata.type === 'silver';
        - });

        each sponsor in silverSponsors
          .small-12.columns.sponsor
            .text-center
              a.sponsor__link(href=sponsor.metadata.link, title=sponsor.metadata.name, alt=sponsor.metadata.name)
                img.sponsor__logo(src= sponsor.url + sponsor.metadata.logo, alt=sponsor.metadata.name)
              p
                br
                a(href='https://twitter.com/' + sponsor.metadata.twitter, target='_blank')= sponsor.metadata.twitter
                br
                a(href=sponsor.metadata.link, target='_blank')= sponsor.metadata.link
            p.sponsor__text!= sponsor.metadata.text

      .grid

        - var bronzeSponsors = _.filter(sponsors, function(sponsor) {
        -   return sponsor.metadata.type === 'bronze';
        - });

        each sponsor in bronzeSponsors
          .small-12.columns.sponsor
            .text-center
              a.sponsor__link(href=sponsor.metadata.link, title=sponsor.metadata.name, alt=sponsor.metadata.name)
                img.sponsor__logo(src= sponsor.url + sponsor.metadata.logo, alt=sponsor.metadata.name)
              p
                br
                a(href='https://twitter.com/' + sponsor.metadata.twitter, target='_blank')= sponsor.metadata.twitter
                br
                a(href=sponsor.metadata.link, target='_blank')= sponsor.metadata.link
            p.sponsor__text!= sponsor.metadata.text

block sponsors
  Empty
