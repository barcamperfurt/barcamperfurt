@import 'nib'
@import '../bower_components/normalize.styl/normalize.styl'
@import '../bower_components/stackenblochen/stackenblochen.styl'
@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,600,300');
@import url('http://fonts.googleapis.com/css?family=Raleway:400,600');

$violet = #92137F;
$red-violet = #8f1332;
$grey = #aab2bd
$grey-very-light = #f5f7fa
$grey-light = #e6e9ed
$grey-dark = #434a54

$not-blue = #5FA7E1
$a-red = #C6463F

*, *:before, *:after
  box-sizing: border-box

html, body
  height: 100%
  color: $grey-dark
  font-family: 'Open Sans', sans-serif;
  font-size: 100%
  line-height: 1.333
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  -ms-content-zooming: none

figure
  margin: 0
  img
    display: block

a
  text-decoration: none
  color: $a-red
  transition: color .2s
  &:hover, &:focus
    text-decoration: underline

h1
  text-align: center
  margin: 1.5em 15% .5em
  line-height: 1.666
  font-family: 'Raleway', sans-serif;
  font-size: 30px

h3
  margin: 1.5em 0 0 0
  font-weight: 400
  font-style: italic

small
  color: $grey
  font-size: .7em

img
  vertical-align: bottom

p
  font-size: 18px
  font-weight: 300

hr
  font-size: 1rem
  margin: 0
  height: 1px
  border: none
  border-top: 1px solid $grey-light

.header
  font-size: 1rem
  font-family: 'Raleway', sans-serif;
  background: transparent url('/images/header.jpg') center center no-repeat
  background-size: cover
  text-align: center
  color: white
  position: relative
  .header-wrapper
    background-color: rgba(255,255,255,.4)
  &__logo
    height: 100px !important
    @media (min-width: 25em)
      height: 230px !important

    margin-bottom: 1em
    transition: all .25s
    &__background
      fill: transparent !important
  &__headline
    font-size: 2em
    margin: 2em 0 1em 0
    vertical-align: middle
  &__ticket-link
    margin-bottom: 1em
    @media $media-query-large
      position: absolute
      top: 50%
      left: -5em

body:not(.site--start) .header
  background: none

body:not(.site--start) .header__logo
  display: none

.ticket-link
  font-size: 1.25rem
  display: inline-block
  color: $red-violet
  font-weight: bold
  padding: .75em .75em .75em 3em
  background: url('/images/ticket.svg') no-repeat center center
  background-size: 100%
  backface-visibility: hidden
  transform: rotate(3deg)
  transition: all .25s
  &:hover, &:focus
    background-size: 110%

.menu-wrapper
  background: transparent url('/images/BCEF_logocircle.svg') calc(50% - 270px) calc(50% + 6px) no-repeat
  background-size: 40px;

body:not(.site--start) .menu-wrapper
  background-color: #8c8c8c;

.menu
  font-size: 1rem
  list-style: none
  margin: 0
  padding: 0
  &__item
    display: inline-block
    &__link
      display: inline-block
      padding: 2.50em .5em .5em .5em
      margin: 0
      color: #fff
      text-shadow: 1px 1px 1px #000
      border-bottom: 2px solid transparent
      transition: all .25s
      .site--news &--news,
      .site--location &--location,
      .site--tickets &--tickets,
      .site--sessions &--sessions,
      .site--sponsoring &--sponsoring,
      .site--faq &--faq,
      .site--about &--about
        background-color: rgba(255, 255, 255, 1)
        color: #000
        text-shadow: 1px 1px 1px #fff
      &:hover, &:focus
        background-color: rgba(0, 0, 0, .1)
        text-decoration: none

.site--start .menu
  margin: 2em 0 0
  &__item
    &__link
      color: #000
      border-radius: 4px
      padding: .25em .25em .15em .25em
      margin: .25em .25em .35em .25em
      text-shadow: 1px 1px 1px #fff
      &:hover,
      &:focus
        background-color: rgba(0, 0, 0, .1)
        text-decoration: none


.menu-subline
  padding-top: 2em

  img
    height: 50px
    vertical-align: middle
    margin-right: 12px
    float: left

  .menu-subline-item
    display: table
    margin-top: 1em;

    @media $media-query-large
      margin-top: 0

    p
      font-weight: normal
      display: table-cell
      vertical-align: middle

.fancy-background
  background: #f3f3f3
  padding-bottom: 3em
  &:nth-child(odd)
    background: white

.news
  &__article
    margin-bottom: 3em
    &:last-child
      margin-bottom: 1em
.more-link
  text-align: center
  margin-top: 2em
  margin-bottom: 1em
  a
    display: inline-block
    border: 2px solid $a-red
    border-radius: 2px
    font-size: 18px
    padding: 14px 20px
    border-radius: 3px
    margin: 1em 0
    @media (min-width: 31.5em)
      margin-top: 0
      margin-bottom: 0
      margin-left: 1em
    &:first-child
      margin-left: 0
    &:hover
      text-decoration: none
      color: white
      background: $a-red

.newsletter-form
  .newsletter-email
    height: 50px
    width 100%
    max-width: 300px
    border: 2px solid #b8b8b8
    padding: 0 19px
    border-radius: 2px
    margin: 1em 0
    @media (min-width: 38em)
      margin-top: 0
      margin-bottom: 0

  .button-signup
    border: 2px solid $a-red
    border-radius: 2px
    font-size: 18px
    padding: 12px 20px
    border-radius: 3px
    background: white
    margin-left: 5px
    height: 50px
    &:hover
      text-decoration: none
      color: white
      background: $a-red

.sponsoring
  &__image
    margin-top: 2em

.about
  font-size: 1rem
  display: flex
  flex-flow: row wrap
  &__link
    display: inline-block
    max-width: 100%
    color: $grey-dark
    margin-bottom: 2em
    &:hover, &:focus
      .about__link__image
        opacity: .9
        transform: scale(1.05)
    &__image
      border-radius: 50%
      transition: opacity .3s, transform .3s
      &__caption
        padding: .5em 0
        text-align: center;
        margin: 0 -1.3em

.organizer
  padding: 0 1rem
  width: 50%
  @media (min-width: 29em)
    width: 33%

.video
  padding-top: 3em
  iframe
    display: block
    margin: 0 auto

.footer
  font-size: 1rem
  line-height: 2em
  padding: 4em 0
  color: $grey
  text-align: center
  &__row
    margin-top: 1em
  a
    color: $grey
    text-decoration: underline
    &:hover, &:focus
      color: $grey-dark

  .social-icon
    display: inline-block
    border: 2px solid $a-red
    border-radius: 3px
    background-color: #fff
    width: 35px
    height: 35px
    overflow: hidden;
    background-size: 70%
    background-repeat: no-repeat
    background-position: center center
    &:nth-child(1)
      background-image: url('/images/ico_twitter.svg')
      &:hover
        background-image: url('/images/ico_twitter_white.svg')
    &:nth-child(2)
      background-image: url('/images/ico_facebook.svg')
      &:hover
        background-image: url('/images/ico_facebook_white.svg')
    &:nth-child(3)
      background-image: url('/images/ico_instagram.svg')
      &:hover
        background-image: url('/images/ico_instagram_white.svg')
    &:nth-child(4)
      background-image: url('/images/ico_youtube.svg')
      &:hover
        background-image: url('/images/ico_youtube_white.svg')
    &:nth-child(5)
      background-image: url('/images/ico_eyeem.svg')
      &:hover
        background-image: url('/images/ico_eyeem_white.svg')
    &:nth-child(6)
      background-image: url('/images/ico_message.svg')
      &:hover
        background-image: url('/images/ico_message_white.svg')

    &:hover, &:focus
      border-color: $a-red
      background-color: $a-red


.sponsoring__details
  font-size: 1.5em

.sponsor-list
  margin-bottom: 3em;

.sponsor-list__title
  text-align: center
  border-bottom: 1px solid $grey-light
  font-family: Lato, sans-serif
  font-weight: 300
  font-style: normal

.text-center
  text-align: center

.sponsors
  margin-top: 3em

.sponsor
  margin-top: 1.5em
  margin-bottom: 1.5em

.sponsor a
  word-wrap: break-word

.sponsor__link
  display: block
  margin: 0 auto
  max-height: 250px
  max-width: 300px
  &__bronze
    max-height: 250px
    max-width: 180px !important

  &__silver
    max-height: 250px
    max-width: 220px !important

.sessions
  font-size: 1rem
  display: flex
  flex-flow: row wrap
  margin: 2em 0
  &__link
    display: inline-block
    max-width: 100%
    color: $grey-dark
    margin-bottom: 2em
    &:hover, &:focus
      .about__link__image
        opacity: .9
        transform: scale(1.05)
    &__image
      border-radius: 50%
      transition: opacity .3s, transform .3s
      &__caption
        padding: .5em 0
        text-align: center;
        margin: 0 -1.3em


.session
  padding: 1rem 1rem

.session a
  word-wrap: break-word

.session__logo
  max-height: 100px

.session__text
  margin: 0;

.session-wunsch
  border-top: 1px solid black

.location__partybox
  float: left
  width: 300px
  margin-bottom: 30px

@media (max-width: 560px)
  .video-container
    position: relative
    padding-bottom: 56.25%
    padding-top: 35px
    height: 0
    overflow: hidden

    iframe
      position: absolute;
      top:0
      left: 0
      width: 100%
      height: 100%


.sponsoringoptions
  text-align: center
  .grid:nth-child(odd)
    background: #f1f1f1
  .grid:first-child
    background: #ffffff
  .small-6
    text-align: left
  .sponsoringheader
    .small-2
      padding: 4px
      font-weight: bold
      p
        color: #ffffff
        font-weight: bold
        margin: 0
        padding: 1em
        height: 200px
        @media (min-width: 29em)
          height: auto
          padding: 0.25em
          font-size: 13px
        @media $media-query-large
          padding: 0.5em
          font-size: 16px
        span
          display: block
          transform: rotate(90deg)
          white-space: nowrap
          overflow: visible
          transform-origin: 50% 50% 0
          @media (min-width: 29em)
            transform: rotate(0)
            white-space: normal
            overflow: inherit
            transform-origin: 0 0 0

      div
        padding: 6px
        @media $media-query-large
          padding: 12px

    .packagebasicsmall
      p
        background: $not-blue
      div
        background: #f1f1f1

    .packagebasicbig
      p
        background: $not-blue
      div
        background: #e1e1e1

    .packagepremium
      p
        background: $a-red
      div
        background: #cdcdcd

.signupFrame
  width: calc(100% + 2em)
  text-align: left
  margin: 0 -1em
  @media $media-query-medium
    margin: 0
    width: 100;

.media
  display: flex;
  align-items: flex-start;

.media-figure
  margin-right: 1em;

.media-body
  margin: 0;
  flex: 1;
